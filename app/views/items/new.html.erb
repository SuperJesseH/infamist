<h1>New Item</h1>


<%= form_tag(search_item_path, method: :get ) do %>
  <label>Name</label>

  <%if @filter%>
    <input type="text_field" value='<%=@filter%>' name="name"/> <br />
  <%else%>
    <%= text_field_tag :name %> <br />
  <%end%>

  <%= submit_tag 'Search for gif on Giphy!' %>
<% end %>


<br /><br />
<%if @filter != nil%>
  <%= form_for @item do |f|%>
    <%@message['data'].each do |message|%>
      <label>
        &nbsp<input type="radio" name="item[img_url]" value="<%= message['images']['fixed_width']['url'] %>"/>&nbsp<img src="<%= message['images']['fixed_width']['url'] %>">
      </label>
    <%end%>
    <br />
    <label>Description</label> <br />
    <input name="item[description]" type="text_area"/>
    <input type="text_field" name="item[name]" style="display:none;" value='<%=@filter%>'/>
    <br />
    <%=f.submit "make new item"%>
  <%end%>
<%end%>


<%= link_to 'Back', items_path %>
