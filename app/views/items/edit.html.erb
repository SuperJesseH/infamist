<h1>Edit Item</h1>
<h2><%=@item.name%></h2>

<img src="<%=@item.img_url%>">

<%= form_for @item do |f|%>
  <br />
  <label>Description</label>
  <input name="description" type="text_area" value="<%=@item.description%>"/>
  <br />
  <br />
  <%=f.submit "submit changes"%>
<%end%>


<%= link_to 'Back', items_path %>
